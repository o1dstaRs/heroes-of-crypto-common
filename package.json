{
    "name": "@heroesofcrypto/common",
    "version": "0.1.4",
    "private": false,
    "description": "Common game logic for Heroes of Crypto. Used on both client and server sides",
    "homepage": "https://heroesofcrypto.io",
    "repository": {
        "type": "git",
        "url": "https://github.com/o1dstaRs/heroes-of-crypto-common.git"
    },
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "src/generated"
    ],
    "scripts": {
        "prebuild": "rimraf dist && yarn run fmt",
        "build": "npm test && tsc && yarn run copy-generated",
        "build:proto": "scripts/protoc_generate.sh",
        "copy-generated": "cpy \"src/generated/**/*\" \"dist/generated\"",
        "fmt": "prettier \"src/**/*.ts\" --write",
        "lint": "yarn run lint:es && yarn run lint:package && yarn run lint:style",
        "lint:es": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern .prettierignore",
        "lint:es:fix": "yarn run lint:es --fix",
        "lint:fix": "yarn run lint:es:fix && yarn run lint:package:fix && yarn run lint:style:fix",
        "lint:package": "yarn run lint:package:fix --check",
        "lint:package:fix": "sort-package-json package.json",
        "lint:style": "yarn run lint:style:base --check",
        "lint:style:base": "prettier \"src/**/*.{ts,tsx,js,json}\"",
        "lint:style:fix": "yarn run lint:style:base --write",
        "test": "jest"
    },
    "browserslist": [
        "> 5%"
    ],
    "jest": {
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "<rootDir>/test/**/*.test.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        }
    },
    "dependencies": {
        "@types/google-protobuf": "^3.15.12",
        "@types/uuid": "^9.0.8",
        "denque": "^2.1.0",
        "google-protobuf": "^3.21.4",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.8.0",
        "@parcel/config-default": "^2.13.0",
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.16.0",
        "cpy-cli": "^4.0.0",
        "eslint": "^9.16.0",
        "idtsc": "^1.1.0",
        "jest": "^29.7.0",
        "parcel": "^2.13.0",
        "prettier": "^3.3.3",
        "protobufjs": "^7.3.2",
        "protoc-gen-js": "^3.21.2",
        "rimraf": "^5.0.7",
        "sort-package-json": "^1.57.0",
        "ts-jest": "^29.1.4",
        "ts-protoc-gen": "^0.15.0",
        "typescript": "^4.7.2"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "@parcel/resolver-default": {
        "packageExports": true
    }
}
